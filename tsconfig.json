{
  "compilerOptions": {
    "paths": {
      // Replacement for baseUrl option, needed for automatic renames when moving files
      "*": ["./src/*"]
    },
    "outDir": "./dist",
    "sourceMap": true,
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "allowUnreachableCode": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2022"
    }
  },
  "include": ["tests/**/*.ts", "vitest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
