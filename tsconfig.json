{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "allowUnreachableCode": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2022"
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "vitest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
